extends layout 

block content 
  h1 Delete Recipe: #{recipe.name} 
  - let isCreator = (JSON.stringify(user._id) === JSON.stringify(recipe.creator))
  if isCreator 
    h2 Are you sure you want to delete this recipe?

    form(method='POST' action='')
      div.form-group 
        input#bookid.form-control(type='hidden', name='recipeid', required='true', value=recipe._id )
      button(type='submit') Delete 
  else 
    div Only the user that created the recipe can delete it.
        